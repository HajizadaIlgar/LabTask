@model Service
@{
    ViewData["Title"] = "Update";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Services update</h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input value="@Model.Title" class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input value="@Model.Description" class="form-control" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon"></label>
                <input value="@Model.Icon" class="form-control" asp-for="Icon">
                <span class="text-danger" asp-validation-for="Icon"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId">Brands</label>
                <select class="form-control" asp-for="DepartmentId" asp-items='new SelectList(ViewBag.Categories,"Id","Name")'>
                    <option>Select Brand</option>
                </select>
                <span class="text-danger" asp-validation-for="DepartmentId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>